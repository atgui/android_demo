<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_black"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@color/black_1A"
            >
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐"
                android:textSize="@dimen/_20"
                android:gravity="center_horizontal"
                android:textColor="@color/title_color"
                />
            <TextView
                android:id="@+id/tagSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textColor="@color/title_color"
                android:paddingRight="@dimen/_10"
                />
        </LinearLayout>
        <!--刷新-->
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none"
                >
                <!--根目录-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_5"
                    >
                    <!--类型推荐-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/black_1A"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="3dp"
                                android:layout_height="@dimen/_20"
                                android:background="@color/title_color"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="类型推荐"
                                android:textColor="@color/title_color"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_10"
                                android:textSize="@dimen/_15"
                                />

                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_black"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_5"
                            android:paddingTop="@dimen/_5"
                            android:paddingRight="@dimen/_10"
                            android:paddingLeft="@dimen/_10"
                            android:orientation="horizontal"
                            android:background="@color/black_1A"
                            >
                            <LinearLayout
                                android:id="@+id/btn_0"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical|center_horizontal"
                                android:paddingTop="@dimen/_15"
                                android:paddingBottom="@dimen/_15"
                                >
                                <com.xcore.ext.ImageViewExt
                                    android:id="@+id/image_0"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@color/black_1A"
                                    android:src="@drawable/network_load"
                                    />
                                <TextView
                                    android:id="@+id/txt_0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textColor="@color/title_color"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btn_1"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical|center_horizontal"
                                android:paddingTop="@dimen/_15"
                                android:paddingBottom="@dimen/_15"
                                >
                                <com.xcore.ext.ImageViewExt
                                    android:id="@+id/image_1"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@color/black_1A"
                                    android:src="@drawable/network_load"
                                    />
                                <TextView
                                    android:id="@+id/txt_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textColor="@color/title_color"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btn_2"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical|center_horizontal"
                                android:paddingTop="@dimen/_15"
                                android:paddingBottom="@dimen/_15"
                                >
                                <com.xcore.ext.ImageViewExt
                                    android:id="@+id/image_2"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@color/black_1A"
                                    android:src="@drawable/network_load"
                                    />
                                <TextView
                                    android:id="@+id/txt_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textColor="@color/title_color"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btn_3"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical|center_horizontal"
                                android:paddingTop="@dimen/_15"
                                android:paddingBottom="@dimen/_15"
                                >
                                <com.xcore.ext.ImageViewExt
                                    android:id="@+id/image_3"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@color/black_1A"
                                    android:src="@drawable/network_load"
                                    />
                                <TextView
                                    android:id="@+id/txt_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textColor="@color/title_color"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <!--女星推荐TOP 8-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_1A"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_5"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="3dp"
                                android:layout_height="@dimen/_20"
                                android:background="@color/title_color"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="女优推荐"
                                android:textColor="@color/title_color"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_10"
                                android:textSize="@dimen/_15"
                                />
                            <TextView
                                android:id="@+id/nv_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="更多 》"
                                android:textColor="@color/title_color"
                                android:paddingRight="@dimen/_10"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_black"
                            />
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/nv_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10"
                            >

                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>

                    <!--主题推荐-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/black_1A"
                        android:layout_marginTop="@dimen/_5"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="3dp"
                                android:layout_height="@dimen/_20"
                                android:background="@color/title_color"
                                android:layout_gravity="center_vertical"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="专题推荐"
                                android:textColor="@color/title_color"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_10"
                                android:textSize="@dimen/_15"
                                />

                        </LinearLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_black"
                            />
                        <ListView
                            android:id="@+id/listView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@color/color_black"
                            android:dividerHeight="4px"
                            >

                        </ListView>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    </LinearLayout>


</FrameLayout>