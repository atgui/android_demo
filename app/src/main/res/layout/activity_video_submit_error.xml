<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/_20"
    android:paddingRight="@dimen/_20">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        android:paddingBottom="@dimen/_10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="提交报错信息"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/_20"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/title_color"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/radioLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/radioBtn0"
                            android:layout_width="@dimen/_25"
                            android:layout_height="@dimen/_25"
                            android:src="@drawable/radio_check"
                            android:layout_marginLeft="1dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无法播放"
                            android:textColor="@color/title_color"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:paddingRight="7dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/radioBtn1"
                            android:layout_width="@dimen/_25"
                            android:layout_height="@dimen/_25"
                            android:src="@drawable/radio_check"
                            android:layout_marginLeft="1dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="播放慢"
                            android:textColor="@color/title_color"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:paddingRight="7dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/radioBtn2"
                            android:layout_width="@dimen/_25"
                            android:layout_height="@dimen/_25"
                            android:src="@drawable/radio_check"
                            android:layout_marginLeft="1dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他"
                            android:textColor="@color/title_color"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:paddingRight="7dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edit_bg"
                    android:textColorHint="@color/color_9c9c9c"
                    android:textColor="@color/title_color"
                    android:hint="请输入详细报错信息"
                    android:gravity="top"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLayout1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/_10"
                android:paddingRight="@dimen/_10"
                >
                <Button
                    android:id="@+id/btn_sure"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="保存"
                    android:background="@color/title_color"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16sp"
                    />
                <ImageView
                    android:layout_width="@dimen/_10"
                    android:layout_height="match_parent" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="取消"
                    android:background="@color/color_9c9c9c"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16sp"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>