<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--搜索框-->
        <LinearLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/black_1A"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10"
                android:gravity="center_vertical"
                android:background="@color/black_1A"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <TextView
                    android:id="@+id/edit_search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="请输入关键词查找片源"
                    android:drawableLeft="@drawable/search_bg"
                    android:textColor="@color/item_txt_color"
                    android:background="@drawable/search_key_bg"
                    android:paddingLeft="@dimen/_5"
                    android:drawablePadding="@dimen/_10"
                    android:textColorHint="@color/item_txt_color"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_box"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/chest_bg"
                android:layout_marginLeft="@dimen/_10"
                android:layout_marginRight="@dimen/_10"
                />
        </LinearLayout>

        <!--内容-->
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_below="@id/searchLayout"
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none"
                >
                <!--根目录-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <com.zhouwei.mzbanner.MZBannerView
                        android:id="@+id/mz_banner"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="3dp"
                        app:open_mz_mode="false"
                        app:canLoop="true"
                        app:middle_page_cover="false"
                        app:indicatorAlign="right"
                        app:indicatorPaddingLeft="10dp"
                        />

                    <!--BUTTON  ITEM-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/black_1A"
                        android:layout_marginTop="2dp"
                        >
                        <LinearLayout
                            android:id="@+id/btn_0"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:paddingTop="@dimen/_15"
                            android:paddingBottom="@dimen/_15"
                            >
                            <com.xcore.ext.ImageViewExt
                                android:id="@+id/image_0"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/network_load"
                                />
                            <TextView
                                android:id="@+id/txt_0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="@color/color_9c9c9c"
                                android:textSize="13dp"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_black"
                            />
                        <LinearLayout
                            android:id="@+id/btn_1"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:paddingTop="@dimen/_15"
                            android:paddingBottom="@dimen/_15"
                            >
                            <com.xcore.ext.ImageViewExt
                                android:id="@+id/image_1"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/network_load"
                                />
                            <TextView
                                android:id="@+id/txt_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="@color/color_9c9c9c"
                                android:textSize="13dp"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_black"
                            />
                        <LinearLayout
                            android:id="@+id/btn_2"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:paddingTop="@dimen/_15"
                            android:paddingBottom="@dimen/_15"
                            >
                            <com.xcore.ext.ImageViewExt
                                android:id="@+id/image_2"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/network_load"
                                />
                            <TextView
                                android:id="@+id/txt_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="@color/color_9c9c9c"
                                android:textSize="13dp"
                                />
                        </LinearLayout>
                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/color_black"
                                />
                        <LinearLayout
                            android:id="@+id/btn_3"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical|center_horizontal"
                            android:paddingTop="@dimen/_15"
                            android:paddingBottom="@dimen/_15"
                            >
                            <com.xcore.ext.ImageViewExt
                                android:id="@+id/image_3"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/network_load"
                                />
                            <TextView
                                android:id="@+id/txt_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="@color/color_9c9c9c"
                                android:textSize="13dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="2dp"
                        >
                        <ListView
                            android:id="@+id/listView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        </ListView>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    </RelativeLayout>

</FrameLayout>