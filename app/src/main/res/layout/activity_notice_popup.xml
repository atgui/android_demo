<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/_20"
    android:paddingRight="@dimen/_20">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FEFEFE"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="公告"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/_20"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/title_color"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_20"
                android:paddingRight="@dimen/_20"
                android:paddingTop="@dimen/_10"
                android:paddingBottom="@dimen/_10"
                android:gravity="center_vertical"
                >
                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/color_9c9c9c"
                        android:autoLink="all"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="5dp"
                        android:gravity="center_horizontal|center_vertical"
                        />

                </android.support.v4.widget.NestedScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/_20"
                android:paddingRight="@dimen/_20"
                >
                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="160dp"
                    android:layout_height="42dp"
                    android:text="朕知道了"
                    android:background="@drawable/button_normal_yello_raduis_5"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_16sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>