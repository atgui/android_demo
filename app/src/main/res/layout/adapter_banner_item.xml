<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_10"
    android:layout_marginRight="@dimen/_10"
    android:background="@color/color_black"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xcore.ext.ImageViewExt
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/network_load"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40"
                android:text=""
                android:background="@drawable/down_up_grent_bg"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_16sp"
                android:gravity="center_vertical"
                android:padding="@dimen/_5"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>