<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/login_log"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/_30"
        android:paddingLeft="@dimen/_30"
        android:paddingRight="@dimen/_30"
        android:paddingBottom="@dimen/_10"
        android:layout_marginTop="30dp"
        >
        <EditText
            android:id="@+id/invitationCode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/login_qcode"
            android:background="@drawable/edit_bg"
            android:hint="填写邀请码可获得更多观影特权"
            android:textColor="@color/white"
            android:textColorHint="#DEDDDD"
            android:paddingLeft="8dp"
            android:textSize="16dp"
            android:drawablePadding="@dimen/_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingTop="@dimen/_5"
            android:text="填写邀请码可获得每日观影次数"
            android:textColor="#DEDDDD"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/loginAccount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/login_user"
            android:background="@drawable/edit_bg"
            android:hint="请输入您的账号"
            android:textColor="@color/white"
            android:textColorHint="#DEDDDD"
            android:paddingLeft="8dp"
            android:textSize="16dp"
            android:drawablePadding="@dimen/_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingTop="@dimen/_5"
            android:text="请输入您的账号"
            android:textColor="#DEDDDD"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/login_mima"
            android:drawableRight="@drawable/login_look"
            android:background="@drawable/edit_bg"
            android:hint="请输入您的密码"
            android:textColor="@color/white"
            android:textColorHint="#DEDDDD"
            android:paddingLeft="8dp"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:drawablePadding="@dimen/_10"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="请输入您的密码"
            android:paddingTop="@dimen/_5"
            android:textColor="#DEDDDD"
            android:textSize="12dp"
            />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_login"
            android:text="注 册"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_15" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/tyCheckbox"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/login_switch_select"
                android:layout_marginRight="@dimen/_5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已同意并阅读"
                android:textColor="@color/color_white"
                android:textSize="14dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/user_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户注册协议》"
            android:textColor="@color/title_color"
            android:textSize="14dp"
            />
    </LinearLayout>
</LinearLayout>