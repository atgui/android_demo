<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black_1A"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <cn.carbs.android.avatarimageview.library.AvatarImageView
                    android:id="@+id/item_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:aiv_BoarderWidth="2dp"
                    android:padding="2dp"
                    app:aiv_BoarderColor="@color/title_color"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="0dp"
                    app:aiv_ShowBoarder="true"
                    app:aiv_TextSizeRatio="0.5"
                    android:src="@drawable/network_load"
                    />
                <TextView
                    android:id="@+id/uname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/_15"
                    android:textSize="14dp"
                    />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_typeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:textSize="13dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提问:"
                    android:textColor="@color/title_color"
                    android:background="@drawable/tag_feedback_tiwen"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_horizontal"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/txt_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title_color"
                    android:lineSpacingExtra="@dimen/_5"
                    android:layout_marginLeft="@dimen/_5"
                    android:textSize="13dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复:"
                    android:textColor="#b0b0b0"
                    android:background="@drawable/tag_feedback_huifu"
                    android:paddingLeft="@dimen/_10"
                    android:paddingRight="@dimen/_10"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_horizontal"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/txt_reContent"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#b0b0b0"
                    android:lineSpacingExtra="@dimen/_5"
                    android:layout_marginLeft="@dimen/_5"
                    android:textSize="13dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-3-2 19:00:98"
                android:textColor="#9A9A9A"
                android:layout_marginTop="@dimen/_10"
                android:gravity="right"
                android:textSize="10dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>